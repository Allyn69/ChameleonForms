@using System.Web.Mvc
@using Enums
@* Generator: MvcHelper *@

@* The @:'s are to stop compilation errors with the Razor engine due to unclosed HTML tags *@

@helper BeginForm(string action, FormMethod method, object htmlAttributes, EncType? enctype) {
@:    @Html.BuildFormTag(action, method, htmlAttributes, enctype)
}

@helper EndForm() {
@:    </form>
}

@helper BeginSection(string title, IHtmlString leadingHtml) {
@:    <fieldset>
@:        <legend>@title</legend>
@:        @leadingHtml
@:        <dl>
}
    
@helper BeginNestedSection(string title, IHtmlString leadingHtml) {
@:            <dt>@title</dt>
@:            <dd>
@:                @leadingHtml
@:                <dl>
}

@helper EndSection() {
@:        </dl>
@:    </fieldset>
}

@helper EndNestedSection() {
@:                </dl>
@:            </dd>
}

@helper BeginFieldInternal(IHtmlString labelHtml, IHtmlString elementHtml, IHtmlString validationHtml) {
@:            <dt>@labelHtml</dt>
@:            <dd>
@:                @elementHtml @validationHtml
}

@helper Field(IHtmlString labelHtml, IHtmlString elementHtml, IHtmlString validationHtml) {
@BeginFieldInternal(labelHtml, elementHtml, validationHtml)
@:            </dd>
}

@helper BeginField(IHtmlString labelHtml, IHtmlString elementHtml, IHtmlString validationHtml) {
@BeginFieldInternal(labelHtml, elementHtml, validationHtml)
@:                <dl>
}

@helper EndField() {
@:                </dl>
@:            </dd>
}