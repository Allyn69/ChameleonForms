@using System.Net.Http
@* Generator: MvcHelper *@

@helper BeginForm(string action, HttpMethod method, string enctype) {
@:    <form action="@action" method="@method.Method.ToLower()"@Html.Attribute("enctype", enctype)>
}

@helper EndForm() {
@:    </form>
}

@* The @:'s are to stop compilation errors with the Razor engine due to unclosed HTML tags *@
@helper BeginSection(string title) {
@:    <fieldset>
@:        <legend>@title</legend>
@:        <dl>
}

@* The @:'s are to stop compilation errors with the Razor engine due to unopened HTML tags *@
@helper EndSection() {
@:        </dl>
@:    </fieldset>
}

@* The @:'s are to stop compilation errors with the Razor engine due to unopened HTML tags *@
@helper BeginFieldInternal(IHtmlString labelHtml, IHtmlString elementHtml, IHtmlString validationHtml) {
@:        <dt>@labelHtml</dt>
@:            <dd>
@:                @elementHtml @validationHtml
}

@helper Field(IHtmlString labelHtml, IHtmlString elementHtml, IHtmlString validationHtml) {
@BeginFieldInternal(labelHtml, elementHtml, validationHtml)
@:            </dd>
}

@helper BeginField(IHtmlString labelHtml, IHtmlString elementHtml, IHtmlString validationHtml) {
@BeginFieldInternal(labelHtml, elementHtml, validationHtml)
@:          <dl>
}

@helper EndField() {
@:          </dl>
@:      </dd>
}