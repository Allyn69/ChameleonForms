@using System.Web.Mvc
@using Enums
@using Templates
@* Generator: MvcHelper *@

@* The @:'s are to stop compilation errors with the Razor engine due to unclosed HTML tags *@

@helper BeginForm(string action, FormMethod method, object htmlAttributes, EncType? enctype) {
@:    @HtmlWriter.BuildFormTag(action, method, htmlAttributes, enctype)
}

@helper EndForm() {
@:    </form>
}

@helper BeginSection(string title, IHtmlString leadingHtml, object htmlAttributes) {
@:    <fieldset>
@:        <legend>@title</legend>
@:        @leadingHtml
@:        <dl@(HtmlWriter.OutputAttributes(htmlAttributes))>
}
    
@helper BeginNestedSection(string title, IHtmlString leadingHtml, object htmlAttributes) {
@:            <dt>@title</dt>
@:            <dd>
@:                @leadingHtml
@:                <dl@(HtmlWriter.OutputAttributes(htmlAttributes))>
}

@helper EndSection() {
@:        </dl>
@:    </fieldset>
}

@helper EndNestedSection() {
@:                </dl>
@:            </dd>
}

@helper BeginFieldInternal(IHtmlString labelHtml, IHtmlString elementHtml, IHtmlString validationHtml) {
@:            <dt>@labelHtml</dt>
@:            <dd>
@:                @elementHtml @validationHtml
}

@helper Field(IHtmlString labelHtml, IHtmlString elementHtml, IHtmlString validationHtml) {
@BeginFieldInternal(labelHtml, elementHtml, validationHtml)
@:            </dd>
}

@helper BeginField(IHtmlString labelHtml, IHtmlString elementHtml, IHtmlString validationHtml) {
@BeginFieldInternal(labelHtml, elementHtml, validationHtml)
@:                <dl>
}

@helper EndField() {
@:                </dl>
@:            </dd>
}

@helper BeginNavigation() {
@:        <div class="form_navigation">
}

@helper EndNavigation() {
@:        </div>
}

@helper BeginMessage(MessageType messageType, string heading) {
@:      <div class="@string.Format("{0}{1}", messageType.ToString().ToLower(), "_message")">
@:        <h3>@heading</h3>
@:          <div class="message">
}

@helper EndMessage() {
@:          </div>
@:      </div>
}